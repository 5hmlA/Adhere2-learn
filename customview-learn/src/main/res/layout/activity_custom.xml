<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="jonas.customview_learn.CustomActivity">

    <jonas.customview_learn.view.LinearGradientView
        android:id="@+id/lv"

        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <jonas.customview_learn.view.JProgView
        android:id="@+id/jpv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:onClick="progress"/>

    <jonas.customview_learn.view.PlayPause
        android:id="@+id/pp"
        android:background="#fcfc"
        android:layout_width="150dp"
        android:layout_margin="50dp"
        android:layout_height="150dp"/>

</LinearLayout>
